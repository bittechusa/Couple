public class BaseTest {

	WebDriver dr;
	@Before
	public void startBrowsing()
	{
		String s = System.getProperty("browser");
		if(s.equals("f"))
		{
			dr = new FirefoxDriver();
			dr.get("http://www.facebook.com");
		}
		else if(s.equals("c"))
		{
			System.setProperty("webdriver.chrome.driver", "C:/Users/Galib/Desktop/Jar/chromedriver");
			dr= new ChromeDriver();
			dr.get("http://www.facebook.com");
		}
		else if(s.equals("ie"))
		{
			System.setProperty("WebDriver.ImeHandler.driver", "C:/Users/Galib/Desktop/Jar/IEDriverServer");
			dr = new InternetExplorerDriver();
			dr.get("http://www.facebook.com");
		}
		
		else
			dr = new FirefoxDriver();
			dr.get("http://facebook.com");
			
			
			
			
			
			
			
	}
		
		@Test
		public void m1()
		{
			
		}
		
		
		
	
	
	
	
	@After
	public void end()
	{
		dr.quit();
	}
}

	

}











